<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.jasminesystems.recursivida.controller.FactorialController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="FACTORIAL (RECURSIVIDAD)"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="txtNumero"
               promptText="Ingresa un número"
               prefWidth="200"/>

    <Button text="Calcular"
            prefWidth="200"
            onAction="#calcular"/>

    <!-- ESTE ERA EL PROBLEMA -->
    <Label fx:id="lblResultado"
           text=""
           style="-fx-font-size: 14px; -fx-text-fill: blue;"/>

    <Button text="Regresar al Menú"
            prefWidth="200"
            onAction="#regresarMenu"/>

</VBox>
