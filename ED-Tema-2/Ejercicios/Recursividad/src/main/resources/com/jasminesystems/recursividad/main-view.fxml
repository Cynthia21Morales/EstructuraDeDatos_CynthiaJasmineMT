<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.jasminesystems.recursividad.controller.MainController"
            prefWidth="400" prefHeight="250">

    <children>
        <Label layoutX="50" layoutY="20" text="Ingresa un número:"/>

        <TextField fx:id="inputNumber"
                   layoutX="50" layoutY="50"
                   prefWidth="200"/>

        <Button text="Calcular"
                layoutX="50" layoutY="100"
                onAction="#onCalculateClick"/>

        <Label fx:id="resultLabel"
               layoutX="50" layoutY="150"
               prefWidth="300"
               text="Resultado aparecerá aquí"/>
    </children>

</AnchorPane>
