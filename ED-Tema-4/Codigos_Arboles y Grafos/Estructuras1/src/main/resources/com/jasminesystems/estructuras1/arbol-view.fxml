<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.jasminesystems.estructuras1.ArbolController"
      spacing="15"
      alignment="CENTER">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Árbol Binario de Búsqueda"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="txtValor"
               promptText="Ingrese un número"
               prefWidth="250"/>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Insertar"
                onAction="#insertar"
                prefWidth="120"/>
        <Button text="Inorden"
                onAction="#mostrarInorden"
                prefWidth="120"/>
    </HBox>

    <TextArea fx:id="areaResultado"
              prefWidth="300"
              prefHeight="100"
              editable="false"/>
</VBox>
