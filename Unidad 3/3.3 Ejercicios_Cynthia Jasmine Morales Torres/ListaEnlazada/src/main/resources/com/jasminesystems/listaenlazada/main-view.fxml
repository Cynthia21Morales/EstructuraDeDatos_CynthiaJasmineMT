<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.jasminesystems.listaenlazada.MainController">

    <Label text="Lista Enlazada - Estructuras Lineales" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="inputField" promptText="Ingrese valor"/>
    <TextField fx:id="positionField" promptText="Posición (opcional)"/>

    <HBox spacing="10">
        <Button text="Agregar al inicio" onAction="#addFirst"/>
        <Button text="Agregar al final" onAction="#addLast"/>
        <Button text="Agregar en posición" onAction="#addAtPosition"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Eliminar por valor" onAction="#removeByValue"/>
        <Button text="Eliminar por posición" onAction="#removeByPosition"/>
        <Button text="Buscar" onAction="#searchElement"/>
    </HBox>

    <Button text="Mostrar lista completa" onAction="#showElements"/>

    <TextArea fx:id="outputArea" editable="false" prefHeight="250" prefWidth="400"/>

</VBox>
