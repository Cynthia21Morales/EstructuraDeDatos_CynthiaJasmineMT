<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.jasminesystems.listasimple.MainController">
    <Label text="Lista Simple" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TextField fx:id="inputField" promptText="Ingrese valor"/>
    <HBox spacing="10">
        <Button text="Agregar" onAction="#addElement"/>
        <Button text="Eliminar" onAction="#removeElement"/>
        <Button text="Mostrar" onAction="#showElements"/>
    </HBox>
    <TextArea fx:id="outputArea" editable="false" prefHeight="200" prefWidth="300"/>
</VBox>
