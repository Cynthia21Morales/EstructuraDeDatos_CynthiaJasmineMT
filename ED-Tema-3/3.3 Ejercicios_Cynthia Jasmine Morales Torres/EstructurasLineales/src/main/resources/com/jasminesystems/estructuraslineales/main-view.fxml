<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jasminesystems.estructuraslineales.MainController">
    <Label text="Estructuras Lineales"/>
    <TextField fx:id="inputField" promptText="Ingrese valor"/>
    <HBox spacing="10">
        <Button text="Agregar" onAction="#addElement"/>
        <Button text="Eliminar" onAction="#removeElement"/>
        <Button text="Mostrar" onAction="#showElements"/>
    </HBox>
    <TextArea fx:id="outputArea" editable="false" prefHeight="200"/>
</VBox>
