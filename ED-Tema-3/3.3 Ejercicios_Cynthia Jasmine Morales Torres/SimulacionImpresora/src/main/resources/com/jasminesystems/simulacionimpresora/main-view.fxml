<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jasminesystems.simulacionimpresora.MainController">

    <Label text="Simulación de Cola de Impresora" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="inputField" promptText="Ingrese trabajo de impresión"/>

    <HBox spacing="10">
        <Button text="Agregar trabajo" onAction="#addElement"/>
        <Button text="Procesar trabajo" onAction="#removeElement"/>
        <Button text="Mostrar cola" onAction="#showElements"/>
    </HBox>

    <TextArea fx:id="outputArea" editable="false" prefHeight="200" prefWidth="350"/>

</VBox>
