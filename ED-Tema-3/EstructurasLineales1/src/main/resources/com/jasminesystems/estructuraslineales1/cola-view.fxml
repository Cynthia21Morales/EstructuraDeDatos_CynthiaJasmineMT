<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.jasminesystems.estructuraslineales1.controller.ColaController"
      style="-fx-background-color: #f4f6f8;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="COLA (FIFO)"
           style="-fx-font-size:18px; -fx-font-weight:bold;" />

    <TextField fx:id="txtDato" promptText="Ingrese dato" />

    <Button text="Encolar" onAction="#encolar"/>
    <Button text="Desencolar" onAction="#desencolar"/>

    <Label fx:id="lblResultado"/>

    <Button text="Regresar" onAction="#regresarMenu"/>
</VBox>
