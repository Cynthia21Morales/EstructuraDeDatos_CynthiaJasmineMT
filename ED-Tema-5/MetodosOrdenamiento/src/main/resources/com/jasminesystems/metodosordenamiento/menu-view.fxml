<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.jasminesystems.metodosordenamiento.controller.MenuController"
      alignment="CENTER"
      spacing="10"
      style="-fx-padding: 20;">

    <Label text="MÉTODOS DE ORDENAMIENTO" style="-fx-font-size:18px; -fx-font-weight:bold;" />

    <Label text="Ordenamiento Interno" style="-fx-font-size:14px; -fx-font-weight:bold;" />
    <Button text="Burbuja" onAction="#irBurbuja" />
    <Button text="QuickSort" onAction="#irQuickSort" />
    <Button text="ShellSort" onAction="#irShellSort" />
    <Button text="Radix" onAction="#irRadix" />

    <Label text="Ordenamiento Externo" style="-fx-font-size:14px; -fx-font-weight:bold; -fx-padding:10 0 0 0;" />
    <Button text="Intercalación" onAction="#irIntercalacion" />
    <Button text="Mezcla Directa" onAction="#irMezclaDirecta" />
    <Button text="Mezcla Natural" onAction="#irMezclaNatural" />

</VBox>
